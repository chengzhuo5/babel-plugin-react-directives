{
  "name": "babel-plugin-react-directives",
  "version": "1.2.0-alpha.1",
  "description": "A babel plugin that provides some directives for react(any JSX), similar to directive of vue.",
  "main": "src/index.js",
  "files": [
    "src",
    "runtime",
    "package.json",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "test": "jest",
    "test:no-cache": "jest --clearCache && npm run test",
    "test:install": "node test/install.js",
    "pg:install": "node playground/install.js",
    "pg:dev": "node playground/build.js --dev",
    "pg:build": "node playground/build.js",
    "postinstall": "npm run test:install && npm run pg:install"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run test"
    }
  },
  "lint-staged": {
    "*.{js}": [
      "eslint --fix",
      "git add"
    ]
  },
  "author": "peakchen90 <1558267774@qq.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/peakchen90/babel-plugin-react-directives"
  },
  "bugs": {
    "url": "https://github.com/peakchen90/babel-plugin-react-directives/issues"
  },
  "keywords": [
    "babel-plugin",
    "react-directive",
    "jsx-directive",
    "jsx-plus",
    "directive",
    "react",
    "vue",
    "x-if",
    "x-for",
    "x-class"
  ],
  "engines": {
    "node": ">=8.6.0"
  },
  "dependencies": {
    "@babel/code-frame": "^7.8.3",
    "@babel/generator": "^7.9.5",
    "@babel/types": "^7.9.5",
    "ajv": "^6.12.2",
    "ajv-errors": "^1.0.1",
    "chalk": "^4.0.0",
    "semver": "^7.3.2"
  },
  "devDependencies": {
    "@babel/core": "^7.9.0",
    "@babel/plugin-transform-modules-commonjs": "^7.9.0",
    "@babel/preset-react": "^7.9.4",
    "@types/jest": "^25.2.1",
    "babel-eslint": "^10.1.0",
    "babel-jest": "^25.5.0",
    "common-tags": "^1.8.0",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.2",
    "eslint": "^6.8.0",
    "eslint-config-airbnb-base": "^14.1.0",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-react": "^7.19.0",
    "eslint-plugin-react-directives": "^1.0.1",
    "husky": "^4.2.5",
    "invariant": "^2.2.4",
    "jest": "^25.5.0",
    "lint-staged": "^10.2.0",
    "lodash.mergewith": "^4.6.2",
    "path-exists": "^4.0.0",
    "prettier": "^1.19.1",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "strip-indent": "^3.0.0"
  }
}
